.main

  .lists

    .preview
      background: white
      box-shadow: 10px 10px 10px lightgrey
      margin: 30px
      transition: background-color .5s

    .preview:hover
      background-color: lightgrey
      transform: scale(1.1)

.overylay-container
  position: relative

.overlay
  height: 100%
  left: 0
  position: absolute
  top: 0
  z-index: 2
  width: 100%
