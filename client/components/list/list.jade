  client/components/list.jade
  List refers to a basic unit, which is a todo list
  -
  
  
template(name='list')
  .list
    if isOwner
      .pull-right
        i.indicator.fa.fa-archive
    .a #{finishers.length.toString} / #{followersCount}
    input#name.editable_display_list(type='text', value='#{name}', readonly='{{$not isOwner}}')

    each items
      +item
    .pull-right
      div
        #new_item.btn(disabled='{{$not isOwner}}') Add new Item
          i.fa.fa-plus-circle.ft-lg
      div
        #delete.btn.pull-right(disabled='{{$not isOwner}}') Delete
          i.fa.fa-times-circle.ft-lg
      div
        if isStarred
          #star.btn.pull-right Unstar
            i.fa.fa-star.ft-lg
        else
          #star.btn.pull-right Star
            i.fa.fa-star.ft-lg
      div
        if isFollowed
          #follow.btn.pull-right Unfollow 
            i.fa.fa-star.ft-lg
        else
          #follow.btn.pull-right Follow 
            i.fa.fa-star.ft-lg
